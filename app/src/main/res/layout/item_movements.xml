<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMovement"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMovementType"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_home_lined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tvMovementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:theme="@style/Title"
        app:layout_constraintStart_toEndOf="@+id/cvMovement"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Casa" />

    <TextView
        android:id="@+id/tvMovementDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:theme="@style/Body"
        app:layout_constraintStart_toEndOf="@+id/cvMovement"
        app:layout_constraintTop_toBottomOf="@+id/tvMovementName"
        tools:text="8 Oct" />


    <TextView
        android:id="@+id/tvValueMovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:theme="@style/Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="S14000" />

</androidx.constraintlayout.widget.ConstraintLayout>